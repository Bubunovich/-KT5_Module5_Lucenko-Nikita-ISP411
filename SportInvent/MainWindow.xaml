<Window x:Class="SportInvent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SportInvent"
        mc:Ignorable="d"
        Title="ИС по прокату спортивного инвентаря" Height="600" Width="1000"
        MinHeight="600" MinWidth="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FF76E383" >
            <Image Source="/images/logo.png" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Left" Margin="180,0,0,0"></Image>
            <TextBlock Text="ИС по прокату спортивного инвентаря"
                       FontSize="24" HorizontalAlignment="Center"
                       VerticalAlignment="Center"></TextBlock>
        </Grid>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
        
    </Grid>
</Window>
