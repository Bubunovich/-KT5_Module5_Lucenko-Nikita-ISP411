<Page x:Class="SportInvent.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SportInvent.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Логин"></Label>
            <TextBox x:Name="LoginTextBox" Height="25" Width="200"></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox x:Name="LoginPassworBox" Height="25" Width="200"></PasswordBox>
            <Button x:Name="LoginButton" Margin="10" Click="LoginButton_Click"
                    Content="Вход" Background="#FF498C51" ></Button>
        </StackPanel>
        
    </Grid>
</Page>
